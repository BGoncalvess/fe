{
    "compilerOptions": {
      "target": "ESNext",
      "lib": ["DOM", "ESNext"],
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@mfe-host/*": ["../mfe.host/src/*"],
        "@mfe-assistant/*": ["../mfe.assistant/src/*"]
      }
    },
    "include": ["**/*.ts", "**/*.tsx"]
  }
  